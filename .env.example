# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Site URL (for authentication callbacks and absolute URLs)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Cloudflare Stream (for video content)
NEXT_PUBLIC_CLOUDFLARE_STREAM_SIGNING_KEY=

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Meilisearch Configuration
NEXT_PUBLIC_MEILISEARCH_HOST=your-meilisearch-host
NEXT_PUBLIC_MEILISEARCH_SEARCH_KEY=your-meilisearch-search-key
MEILISEARCH_ADMIN_KEY=your-meilisearch-admin-key

# Optional: Analytics (if you're using any analytics services)
# NEXT_PUBLIC_ANALYTICS_ID=

# Optional: For deployment environments
# NODE_ENV=development

# For testing in development - set to 'he' to simulate being in Israel, or leave empty for actual detection
# TEST_LOCALE=he 